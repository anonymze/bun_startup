{
  "compilerOptions": {
    // where the compiler will output the files after outdir name (base . if composite true)
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./server/*"]
    },
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "noEmit": true,
    "composite": true,
    // with composite i think it's true by default
    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    // "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "sourceMap": false,
    "types": [
      "bun-types" // add Bun global
    ],    
  },
  // where all files ts to check are located
  "include": ["./*.ts", "./server"],
  "exclude": ["node_modules"],
  // All to reference files from other tsconfigs 
  //   "references": [
  //     { "path": "./ref_to_another_tsconfig_file" }
  // ]
}
